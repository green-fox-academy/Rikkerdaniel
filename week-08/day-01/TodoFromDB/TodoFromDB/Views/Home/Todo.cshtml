@model System.Collections.Generic.List<TodoFromDB.Models.Todo>
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <h1>Todos for today</h1>
        
        <a href="/AddNew">Add new todo</a>
        <a href="/Update">Update todo</a>
        <br />
        </br>

        @foreach (var item in @Model)
        {
            <tr>
                <form action="/Remove" method="post">
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.IsUrgent</td>
                    <td>@item.IsDone</td>

                    <button type="submit" name="id" value="@item.Id" class="btn-link">Delet</button>
                </form>
            </tr>
            <br />
        }

        
    </body>
</html>
