@model System.Collections.Generic.List<TodoFromDB.Models.Todo>
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <h1>Todos for today</h1>
        @foreach (var item in @Model)
        {
            <tr>
                <form action="/todo/Remove" method="post">
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.IsUrgent</td>
                    <td>@item.IsDone</td>

                    <button type="submit" name="id" value="@item.Id" class="btn-link">Delet</button>
                </form>
            </tr>
            <br />
        }

        <form action="/todo/Add" method="post">
            <br />
            Add new:
            <br />
            <input type="text" name="Title" value=""><br />
            <input type="submit" value="Submit">
        </form>
    </body>
</html>
